
<script src="js/custom/customer.js"></script>

<!-- Begin Page Content -->
 <div class="container-fluid">
    <div class="row mb-4">
        <div class="col-3">
            <button type="button" id="btnNewCustomer" class="btn btn-primary">+ 고객 추가</button>
        </div>
    </div>
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">고객 리스트</h6>
            
        </div>

        <div class="card-body">
            <div class="table-responsive table-hover">
                <table class="table table-bordered" id="tbCustomerList" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>이름</th>
                            <th>전화번호</th>
                            <th>주소</th>
                            <th>등급</th>
                            <th>포인트</th>
                            <th>방문기록</th>
                        </tr>
                    </thead>
                  
                    <tbody id="tbCustomerListBody">

                    </tbody>
                </table>
            </div>
        </div>

        <div class="modal fade" id="modalCustomer" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" customerId="">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">고객 추가</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  <form>
                    <div class="form-group">
                        <label class="col-form-label">이름</label>
                        <input type="text" class="form-control" id="inputCustomerName">
                    </div>
                    <div class="form-group">
                        <label class="col-form-label">전화번호</label>
                        <input type="text" class="form-control" id="inputCustomerPhone">
                    </div>
                    <div class="form-group">
                        <label class="col-form-label">주소</label>
                        <input type="text" class="form-control" id="inputCustomerAddress">
                    </div>
                    <div class="form-group">
                        <label for="inputCustomerName">등급</label>
                        <select class="form-control" id="inputCustomerClass">
                          <option>없음</option>
                          <option>SILVER</option>
                          <option>GOLD</option>
                          <option>VIP</option>
                          
                        </select>
                      </div>
                    <div class="form-group">
                        <label class="col-form-label">포인트</label>
                        <div class="input-group mb-2">

                          <div class="input-group-prepend">
                            <div class="input-group-text">&#8361;</div>
                          </div>
                          <input type="text" class="form-control" id="inputCustomerPoint">
                        </div>
                        
                    </div>
                    <div class="form-group">
                      <label class="col-form-label">메모</label>
                      <textarea class="form-control" id="inputCustomerMemo"></textarea>
                    </div>
                    

                  </form>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-danger" id="btnDelCustomer">삭제</button>
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">닫기</button>
                  <button type="button" id="btnSaveCustomer" class="btn btn-primary">저장</button>
                </div>
              </div>
            </div>

        </div>
        <div id="modalCustomerHistory" class="modal" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">포인트 사용내역</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <table class="table table-bordered">
                  <thead>
                    <tr>
                      <th scope="col">날짜</th>
                      <th scope="col">제품명</th>
                      <th scope="col">포인트</th>
                    </tr>
                  </thead>
                  <tbody id="tbCustomerHistory">
                   
                  </tbody>
                </table>
              </div>
              <div class="modal-footer">
                <button type="button" id="btnCloseHistory" class="btn btn-secondary" >닫기</button>
              </div>
            </div>
          </div>
        </div>
        
    </div>


</div>

<!-- /.container-fluid -->

<script id="tbCustomerList-template" type="text/x-handlebars-template">
    {{#customerList}}
    <tr customerId='{{_id}}'>
        <td>{{name}}</td>
        <td>{{phone}}</td>
        <td>{{address}}</td>
        <td>{{vip}}</td>
        <td id="tdCustomerListPoint">{{point}}</td>
        <td><button id="btnCustomerHistory" type="button" class="btn btn-info" customerId="{{_id}}">조회</button></td>
    </tr>
    {{/customerList}}
</script>
<script id="tbCustomerHistory-template" type="text/x-handlebars-template">
    {{#historyList}}
    <tr>
        <td>{{createdAt}}</td>
        <td>{{product}}</td>
        <td>{{point}}</td>
     </tr>
     {{/historyList}}
</script>
