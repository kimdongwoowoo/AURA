<script src="js/custom/product.js"></script>

<!-- Begin Page Content -->
 <div class="container-fluid">
    <div class="row mb-4">
        <div class="col-3">
            <button type="button" id="btnNewProduct" class="btn btn-primary">+ 제품 추가</button>
        </div>
        
    </div>
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">제품 리스트</h6>
            
        </div>

        <div class="card-body">
            <div class="table-responsive table-hover">
                <table class="table table-bordered" id="tbProductList" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>분류</th>
                            <th>제품명</th>
                            <th>가격</th>
                           
                        </tr>
                    </thead>
    
                    <tbody id="tbProductListBody">

                    </tbody>
                </table>
            </div>
        </div>

        <div class="modal fade" id="modalProduct" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" productId="">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title">제품 추가</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  <form>
                    <div class="form-group">
                      <label for="inputproductClass">분류</label>
                      <select class="form-control" id="inputProductClass">
                        <option>분류없음</option>
                        <option>커트</option>
                        <option>펌</option>
                      </select>
                    </div>
                    <div class="form-group">
                        <label class="col-form-label">제품명</label>
                        <input type="text" class="form-control" id="inputProductName">
                    </div>

                    <div class="form-group">
                        <label class="col-form-label">금액</label>
                        <div class="input-group mb-2">

                          <div class="input-group-prepend">
                            <div class="input-group-text">&#8361;</div>
                          </div>
                          <input type="text" class="form-control" id="inputProductPrice">
                        </div>
                        
                    </div>
                    <div class="form-group">
                      <label class="col-form-label">메모</label>
                      <textarea class="form-control" id="inputproductMemo"></textarea>
                    </div>
                  </form>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">닫기</button>
                  <button type="button" id="btnSaveProduct" class="btn btn-primary">저장</button>
                </div>
              </div>
            </div>
        </div>

    </div>


</div>

<!-- /.container-fluid -->

<script id="tbProductList-template" type="text/x-handlebars-template">
    {{#productList}}
    <tr productId='{{id}}'>
        <td>{{class}}</td>
        <td>{{name}}</td>
        <td>{{price}}</td>
     </tr>
     {{/productList}}
</script>
