<script src="js/custom/sales.js"></script>

<!-- Begin Page Content -->
<div class="container-fluid">
  <div class="row mb-4">
    <div class="col-3">
      <button type="button" id="btnNewSales" class="btn btn-primary">+ 장부 추가</button>
    </div>

  </div>
  <div class="card shadow mb-4">
    <div class="card-header py-3">
      <h6 class="m-0 font-weight-bold text-primary">장부 리스트</h6>

    </div>

    <div class="card-body">
      <div class="table-responsive table-hover">
        <table class="table table-bordered" id="tbSalesList" width="100%" cellspacing="0">
          <thead>
            <tr>
              <th>이름</th>
              <th>전화번호</th>
              <th>금액</th>
              <th>날짜</th>
            </tr>
          </thead>

          <tbody id="tbSalesListBody">

          </tbody>
        </table>
      </div>
    </div>

    <div class="modal fade" id="modalSales" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
      aria-hidden="true" salesId="">
      <div class="modal-dialog" role="document">
        <div class="modal-content p-2">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">장부 추가</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>

          <div class="modal-body border-bottom">
            <form id="formSelectUser">
              <div class="form-group row p-1">
                <div class="col-auto">
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="userRadioOptions" id="radioUser"
                      data-target="#divUserSearch" aria-expanded="true" aria-controls="divUserSearch">
                    <label class="form-check-label" for="inlineRadio1">회원</label>
                  </div>
                </div>
                <div class="col-auto">
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="userRadioOptions" id="radioNoneUser">
                    <label class="form-check-label" for="inlineRadio1">비회원</label>
                  </div>
                </div>
              </div>

              <div class="collapse show" id="divUserSearch">
                <div class="input-group mb-2">
                  <input type="text" class="form-control" placeholder="검색" id="inputSearchCustomer">
                  <div class="input-group-append">
                    <button class="btn btn-primary" type="button" id="btnSearchCustomer">
                      <i class="fas fa-search fa-sm"></i>
                    </button>
                  </div>
                </div>
                <div class="form-group">
                  <select multiple class="form-control" id="selectCustomerList">
                    <option>검색 결과가 없습니다.</option>


                  </select>
                </div>
              </div>
            </form>


          </div>
          <div class="modal-body border-bottom">
            <form id="formSelectProduct">
              <div class="form-group row p-1">
                <div class="col-auto">
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="productRadioOptions" id="radioProduct"
                      data-target="#divProductSearch" aria-expanded="true" aria-controls="divProductSearch">
                    <label class="form-check-label" for="">제품검색</label>

                  </div>
                </div>
                <div class="col-auto">
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="productRadioOptions" id="radioSelfPrice"
                      value="option1">
                    <label class="form-check-label" for="">직접입력</label>
                  </div>
                </div>
              </div>
              <div class="collapse show" id="divProductSearch">

                <div class="input-group mb-2">
                  <input type="text" class="form-control" placeholder="검색" id="inputSearchProduct">
                  <div class="input-group-append">
                    <button class="btn btn-primary" type="button" id="btnSearchProduct">
                      <i class="fas fa-search fa-sm"></i>
                    </button>
                  </div>
                </div>
                <div class="form-group">
                  <select multiple class="form-control" id="selectProductList">
                    <option>검색 결과가 없습니다.</option>

                  </select>
                </div>
              </div>
            </form>
          </div>
          <div class="modal-body border-bottom">
            <div class="form-group row">
              <label for="price" class="col-3 col-form-label">상품가격</label>
              <div class="col-9 input-group">
                <input class="form-control" id="inputPrice" placeholder="0">
                <div class="input-group-append">
                  <span class="input-group-text">￦</span>
                </div>
              </div>
            </div>
          </div>
          <div class="modal-body border-bottom">
            <form id="formSelectDiscount">

              <div class="form-group row p-1">
                <div class="col-auto">
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="discountRadioOptions" id="radioNoneDiscount"
                      readonly>
                    <label class="form-check-label" for="">할인없음</label>

                  </div>
                </div>
                <div class="col-auto">
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="discountRadioOptions" id="radioPercentDiscount">
                    <label class="form-check-label" for="">퍼센트할인</label>

                  </div>
                </div>
                <div class="col-auto">
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="discountRadioOptions" id="radioNumberDiscount">
                    <label class="form-check-label" for="">지정금액할인</label>

                  </div>
                </div>
              </div>
              <div class="form-group row">
                <label for="price" class="col-3 col-form-label">할인</label>
                <div class="col-9 input-group">
                  <input class="form-control" id="inputDiscount" placeholder="0">
                  <div class="input-group-append">
                    <span class="input-group-text" id="appendPercent">%</span>
                  </div>
                </div>

              </div>
            </form>
          </div>
          <div class="modal-body border-bottom collapse show" id="divPoint">
            <form id="formPoint">
              <div class="form-group row">
                <label for="price" class="col-3 col-form-label">포인트 사용</label>
                <div class="col-4">
                  <input type="" class="form-control" id="inputPointUse" placeholder="0" readonly>
                </div>
                <div class="col input-group">
                  <input type="" class="form-control" id="inputPointTotal" placeholder="0" readonly>
                  <div class="input-group-append">
                    <span class="input-group-text">￦</span>
                  </div>
                </div>
              </div>
            </form>
          </div>
          <div class="modal-body border-bottom">
            <form>
              <div class="form-group row">
                <label for="inputFee" class="col-form-label col-3">최종금액</label>
                <div class="col-9 input-group">
                  <input class="form-control" id="inputFee" placeholder="0" readonly>
                  <div class="input-group-append">
                    <span class="input-group-text">￦</span>
                  </div>
                </div>
              </div>
            </form>
          </div>
          <div class="modal-body border-bottom">
            <form>
              <div class="form-group">
                <label class="col-form-label">메모</label>
                <textarea class="form-control" id="inputSalesMemo"></textarea>
              </div>
            </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">닫기</button>
            <button type="button" id="btnSaveSales" class="btn btn-primary">저장</button>
          </div>
        </div>
      </div>
    </div>


    <div class="modal fade" id="modalReceipt" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
      aria-hidden="true" salesId="">
      <div class="modal-dialog" role="document">
        <div class="modal-content p-2">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">영수증</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          
            <table class="table table-hover">

              <tbody>
                <tr class="border-top-0">
                  <td class="">이름</td>
                  <td class="" id="tdReceiptName">김동우</td>
                <tr>
                  <td class="">결제금액</td>
                  <td class="" id="tdReceiptFee">123</td>
                </tr>
                <tr>
                  <td class="">날짜</td>
                  <td class="" id="tdReceiptDate">2020-10-20</td>
                </tr>
                <tr>
                  <td class="">메모</td>
                  <td class="" id="tdReceiptMemo">없음</td>
                </tr>
              </tbody>
            </table>
        
        
      
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">닫기</button>
            <button type="button" id="btnSaveSales" class="btn btn-primary">저장</button>
          </div>
        </div>
      </div>
    </div>
  </div>


</div>

<!-- /.container-fluid -->

<script id="tbSalesList-template" type="text/x-handlebars-template">
    {{#salesList}}
    <tr salesId='{{id}}'>
        <td>{{customerInfo.name}}</td>
        <td>{{customerInfo.phone}}</td>
        <td>{{fee}}</td>
        <td>{{date}}</td>
     </tr>
     {{/salesList}}
</script>

<script id="selectCustomerList-template" type="text/x-handlebars-template">
  {{#customerList}}
    <option data-customerid='{{id}}' data-customername='{{name}}' data-customerphone='{{phone}}' data-point='{{point}}' data-vip='{{vip}}'>{{name}} ({{phone}}) 등급 {{vip}}</option>

   {{/customerList}}
</script>
<script id="selectProductList-template" type="text/x-handlebars-template">
  {{#productList}}
    <option data-productid='{{id}}' data-productname='{{name}}' data-price='{{price}}'>{{name}} ({{price}}) </option>
   {{/productList}}
</script>